<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:TimeStudy="clr-namespace:TimeStudy.ViewModels" xmlns:local="clr-namespace:TimeStudy.Custom" xmlns:views="clr-namespace:TimeStudy.Views" x:Class="TimeStudy.Pages.TimeStudyPage">
    <ContentPage.BindingContext>
        <TimeStudy:TimeStudyViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="Center" VerticalOptions="StartAndExpand" BackgroundColor="Transparent">
            <StackLayout BackgroundColor="Transparent" Padding="2" Margin="2" Opacity="{Binding Opacity}" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Vertical">
                    <Grid Padding="5" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto">
                            </RowDefinition>
                            <RowDefinition Height="Auto">
                            </RowDefinition>
                            <RowDefinition Height="Auto">
                            </RowDefinition>
                            <RowDefinition Height="Auto">
                            </RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="5*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="2.5*">
                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="Current Element" HorizontalTextAlignment="Start" HorizontalOptions="Fill" FontSize="10" TextColor="Black" />
                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding CurrentElementWithoutLapTimeName}" HorizontalTextAlignment="Start" HorizontalOptions="Fill" FontSize="10" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="0" Text="Foreign" HorizontalTextAlignment="Start" HorizontalOptions="Fill" FontSize="10" TextColor="Black" />
                        <Label Grid.Row="3" Grid.Column="0" Text="{Binding ForeignElementCount}" HorizontalTextAlignment="Start" HorizontalOptions="Fill" FontSize="10" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" Text="{Binding StopWatchTime}" FontSize="45" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" />
                        <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="4" Text="Foreign" Command="{Binding ShowForeignElements}" HorizontalOptions="FillAndExpand" Style="{StaticResource stopWatchButton}"  HeightRequest="20"/>
                    </Grid>
                </StackLayout>
                <StackLayout Padding="5,2,5,0" BackgroundColor="White">
                    <Grid Padding="3" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*">
                            </RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.9*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="0.6*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="4*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="1.8*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="1.8*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="1*">
                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="Cycle" FontSize="9" TextColor="Black" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="0" Grid.Column="1" Text="Lap" FontSize="9" TextColor="Black" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="0" Grid.Column="2" Text="Element" HorizontalTextAlignment="Start" FontSize="9" TextColor="Black" />
                            <Label Grid.Row="0" Grid.Column="3" Text="Elapsed" HorizontalTextAlignment="Start" FontSize="9" TextColor="Black" />
                            <Label Grid.Row="0" Grid.Column="4" Text="Lap Time" HorizontalTextAlignment="Start" FontSize="9" TextColor="Black" />
                            <Label Grid.Row="0" Grid.Column="5" Text="Rating" HorizontalTextAlignment="Start" FontSize="9" TextColor="Black" />
                        </Grid>
                </StackLayout>
                <StackLayout HorizontalOptions="CenterAndExpand" Padding="0,0,0,5" Orientation="Horizontal">
                    <local:CustomListView x:Name="ListViewTimes" Margin="0,5" ItemsSource="{Binding LapTimes}" BackgroundColor="Gray" HasUnevenRows="true" HorizontalOptions="Center" SeparatorVisibility="Default" SeparatorColor="#605F5F" ItemClickedCommand="{Binding ItemClickedCommand}" HeightRequest="430">
                        <x:Arguments>
                            <ListViewCachingStrategy>RecycleElement</ListViewCachingStrategy>
                        </x:Arguments>
                        <ListView.Header>
                            <StackLayout Padding="5,2,5,2" BackgroundColor="Silver">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding RunningItemClickedCommand}" />
                                </StackLayout.GestureRecognizers>
                                <Grid Padding="5" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*">
                                        </RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.9*">
                                        </ColumnDefinition>
                                        <ColumnDefinition Width="0.6*">
                                        </ColumnDefinition>
                                        <ColumnDefinition Width="4*">
                                        </ColumnDefinition>
                                        <ColumnDefinition Width="1.8*">
                                        </ColumnDefinition>
                                        <ColumnDefinition Width="1.8*">
                                        </ColumnDefinition>
                                        <ColumnDefinition Width="1*">
                                        </ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding CurrentCycle}" FontSize="11" HorizontalTextAlignment="Start" TextColor="Black"/>
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding CurrentSequence}" FontSize="11" HorizontalTextAlignment="Start" TextColor="Black"/>
                                    <Label Grid.Row="0" Grid.Column="2" Text="{Binding CurrentElementWithoutLapTimeName}" HorizontalTextAlignment="Start" FontSize="13" TextColor="Black"/>
                                    <Label Grid.Row="0" Grid.Column="3" Text="{Binding StopWatchTime}" HorizontalTextAlignment="Start" FontSize="12" TextColor="Black"/>
                                    <Label Grid.Row="0" Grid.Column="4" Text="{Binding IndividualLapTime}" HorizontalTextAlignment="Start" FontSize="12" TextColor="Black"/>
                                    <Label Grid.Row="0" Grid.Column="5" Text="{Binding Rating}" HorizontalTextAlignment="Start" FontSize="11" TextColor="Black"/>
                                </Grid>
                            </StackLayout>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Padding="5,2,5,2">
                                        <Grid Padding="5" Margin="5" BackgroundColor="{Binding ElementColour}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*">
                                                </RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.9*">
                                                </ColumnDefinition>
                                                <ColumnDefinition Width="0.6*">
                                                </ColumnDefinition>
                                                <ColumnDefinition Width="4*">
                                                </ColumnDefinition>
                                                <ColumnDefinition Width="1.8*">
                                                </ColumnDefinition>
                                                <ColumnDefinition Width="1.8*">
                                                </ColumnDefinition>
                                                <ColumnDefinition Width="1*">
                                                </ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Cycle}" FontSize="11" HorizontalTextAlignment="Start" />
                                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Sequence}" FontSize="11" HorizontalTextAlignment="Start" />
                                            <Label Grid.Row="0" Grid.Column="2" Text="{Binding Element}" HorizontalTextAlignment="Start" FontSize="13" />
                                            <Label Grid.Row="0" Grid.Column="3" Text="{Binding TotalElapsedTime}" HorizontalTextAlignment="Start" FontSize="12" />
                                            <Label Grid.Row="0" Grid.Column="4" Text="{Binding IndividualLapTimeFormatted}" HorizontalTextAlignment="Start" FontSize="12" />
                                            <Label Grid.Row="0" Grid.Column="5" Text="{Binding Rating}" HorizontalTextAlignment="Start" FontSize="11" />
                                        </Grid>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </local:CustomListView>
                </StackLayout>
                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                    <Grid Padding="0,0,0,5" Margin="5,0,5,5" HorizontalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*">
                            </RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="1.3*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="*">
                            </ColumnDefinition>
                            <ColumnDefinition Width="1.2*">
                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Text=" Start " Command="{Binding StartTimer}" IsEnabled="{Binding IsStartEnabled}" HorizontalOptions="Fill" Style="{StaticResource stopWatchButton}" />
                        <Button Grid.Row="0" Grid.Column="1" Text="   Lap   " Command="{Binding LapTimer}" IsEnabled="{Binding IsLapEnabled}" HorizontalOptions="Fill" Style="{StaticResource stopWatchButton}" />
                        <Button Grid.Row="0" Grid.Column="2" Text=" Stop " Command="{Binding StopTimer}" IsEnabled="{Binding IsStopEnabled}" HorizontalOptions="Fill" Style="{StaticResource stopWatchButton}" />
                        <Button Grid.Row="0" Grid.Column="3" Text=" Reset " Command="{Binding ClearLaps}" IsEnabled="{Binding IsClearEnabled}" HorizontalOptions="Fill" Style="{StaticResource stopWatchButton}" />
                    </Grid>
                </StackLayout>
            </StackLayout>
            <views:ActivitiesView IsVisible="{Binding ActivitiesVisible}" BackgroundColor="#FCFAFA" HeightRequest="370" Margin="10" VerticalOptions="Center" HorizontalOptions="Center" />
            <views:RatingView IsVisible="{Binding RatingsVisible}" Padding="10, 0, 20 ,0" AbsoluteLayout.LayoutBounds="0.5, 0.5, 25, 25" AbsoluteLayout.LayoutFlags="All" />
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" AbsoluteLayout.LayoutBounds="0.25, 0.25, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <views:ValidationView x:Name="validationView" IsVisible="{Binding IsInvalid}" />
            </StackLayout>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <views:ForeignElementsView IsVisible="{Binding ForeignElementsVisible}" Padding="0" AbsoluteLayout.LayoutBounds="0.25, 0.25, 1, 1" AbsoluteLayout.LayoutFlags="All" />
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>